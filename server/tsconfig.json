{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"allowJs": true,
		"checkJs": false,
		"sourceMap": false,
		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": false,
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules"],
	"files": ["./src/.d.ts"]
}
